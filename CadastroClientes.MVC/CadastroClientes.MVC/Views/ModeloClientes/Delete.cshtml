@model CadastroClientes.MVC.Models.ModeloCliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Deseja Deletar permanentemente o cliente @Model.Nome ?</h3>
<div>
    <h4>Dados do cliente</h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Model.DataNascimento.ToLongDateString();
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PoderDeDecisao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PoderDeDecisao)
        </dd>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CPF" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
